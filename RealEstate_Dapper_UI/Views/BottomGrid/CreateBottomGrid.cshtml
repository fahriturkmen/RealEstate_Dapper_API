@model CreateBottomGridDto
@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Hizmet Alt Başlığı Ekleme</h6>
                <form method="post">
                    <label>Hizmet Görsel Adı:</label>
                    <input type="text" asp-for="IconImage" class="form-control" />
                    <br />
                    <label>Başlık:</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Açıklama:</label>
                    <input type="text" asp-for="BG_Description" class="form-control" />
                    <br />
                    <label>Durum:</label>
                    <input type="checkbox" asp-for="BottomGridStatus" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

