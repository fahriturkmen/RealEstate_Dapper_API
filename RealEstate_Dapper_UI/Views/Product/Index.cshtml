@model List<ResultProductDto> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Silme</th>
                                <th scope="col">Güncelleme</th>
                                <th scope="col">Sitede İncele</th>
                                <th scope="col">Günün Fırsatları</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.productID</th>
                                    <td>@item.productTitle</td>
                                    <td>@item.productCity</td>
                                    <td>@item.productDistrict</td>
                                    <td>@item.productCategoryName</td>
                                    <td>@item.productPrice</td>
                                    <td>@item.productType</td>
                                    <td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Product/ProductDetail/@item.productID" class="btn btn-outline-primary">Sitede Gör</a></td>
                                    <td>
                                        @if(item.productDealofTheDay == true)
                                        {
                                            <a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-warning">Pasif Yap</a>
                                        }
                                        @if (item.productDealofTheDay == false)
                                        {
                                            <a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-secondary">Aktif Yap</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

