@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1>Personel Sayfası</h1>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Personel Adı</th>
                                <th scope="col">Personel Ünvanı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Silme</th>
                                <th scope="col">Güncelleme</th>
                                <th scope="col">Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.EmployeeID</th>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.EmployeeTitle</td>
                                    <td>@item.EmployeeStatus</td>
                                    <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Employee/GetEmployee/@item.EmployeeID" class="btn btn-outline-info">Detay</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Employee/CreateEmployee/" class="btn btn-outline-primary">Yeni Personel Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

